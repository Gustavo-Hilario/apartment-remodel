{
    "watch": ["scripts/server.js", "db/**/*.js", "middleware/**/*.js", "charts/**/*.html", "*.html"],
    "ignore": ["data/**/*", "node_modules/**/*", "reports/**/*", "client/**/*"],
    "ext": "js,html,json",
    "delay": "2500",
    "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--no-deprecation"
    },
    "verbose": true,
    "restartable": "rs",
    "legacyWatch": false,
    "execMap": {
        "js": "node --trace-warnings"
    },
    "signal": "SIGTERM",
    "events": {
        "restart": "echo '\nðŸ”„ Server restarting due to changes...\n'"
    }
}
